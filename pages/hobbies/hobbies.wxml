<view>
  <view class="index-hd">
    <view class="index-desc">好的开端是成功的一半</view>
  </view>
  <view class="index-bd">
    <view class="kind-list">
      <block wx:for-items="{{allHobbies}}" wx:key="{{item.id}}">
        <view class="kind-list-item base-shadow">
          <view id="{{item.id}}" class="kind-list-item-hd {{item.open ? 'kind-list-item-hd-show' : ''}}" bindtap="kindToggle">
            <view class="kind-list-text">{{item.name}}</view>
            <image class="kind-list-img" src="images/ic_more.png"></image>
          </view>
          <view class="kind-list-item-bd {{item.open ? 'kind-list-item-bd-show' : ''}}">
            <view class="navigator-box {{item.open ? 'navigator-box-show' : ''}}">
              <block wx:for-items="{{item.hobbies}}" wx:for-item="hobby" wx:key="{{hobby.item.id}}">
                <view data-hobby='{{hobby}}' bindtap='addHobby' class="navigator">
                  <view class="navigator-text">{{hobby.item.name}}</view>
                  <image class="navigator-image" src="images/ic_add{{hobby.added}}.png"/>
                </view>
              </block>
            </view>
          </view>
        </view>
      </block>
    </view>
  </view>
</view>