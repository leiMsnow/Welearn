.input {
  display: flex;
  flex: 1;
  width: 100%;
  padding: 5rpx;
}

.input-title {
  color: forestgreen;
  margin-right: 5rpx;
}

.input-container {
  flex-direction: row;
  flex: 1;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  height: 350rpx;
  background-color: ghostwhite;
  padding: 10rpx;
}

.container {
  padding: 20rpx;
  height: 100%;
  flex: 1;
}

.camera-container {
  justify-content: center;
  align-items: center;
  flex: 1;
  display: flex;
  padding: 10rpx;
  border: 1rpx dashed gainsboro;
  margin: 10rpx 0;
}

.camera-container:active {
  background-color: ghostwhite;
}

.camera {
  width: 200rpx;
  height: 200rpx;
}