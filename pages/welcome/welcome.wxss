/**index.wxss**/

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 200rpx;
  height: 200rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  font-size: 32rpx;
  color: #aaa;
}

.motto-container {
  margin-top: 20px;
  border: 1px solid forestgreen;
  border-radius: 4px;
  text-align: center;
  padding: 0px 10px 0px 10px;
}

.motto-text {
  font-size: 28rpx;
  font-weight: bold;
  line-height: 80rpx;
  color: forestgreen;
}
