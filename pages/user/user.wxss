.item-container {
    display: flex;
    flex: 1;
    flex-direction: column;
}

.item-row {
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    padding: 30rpx;
}

.avatar {
    width: 100rpx;
    height: 100rpx;
    border-radius: 5rpx;
}

.item-info {
    margin: 20rpx;
    display: flex;
    flex-direction: column;
}

.tips-text {
    font-size: 22rpx;
}

.tips-on {
    color: forestgreen;
}

.tips-off {
    color: #888;
}

.statistics-list {
    position: relative;
    overflow: hidden;
}

.statistics-list:before {
    content: " ";
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    height: 1px;
    border-top: 1px solid gainsboro;
    color: gainsboro;
    -webkit-transform-origin: 0 0;
    transform-origin: 0 0;
    -webkit-transform: scaleY(0.5);
    transform: scaleY(0.5);
}

.statistics-list:after {
    content: " ";
    position: absolute;
    left: 0;
    bottom: 0;
    right: 0;
    height: 1px;
    border-bottom: 1px solid gainsboro;
    color: gainsboro;
    -webkit-transform-origin: 0 100%;
    transform-origin: 0 100%;
    -webkit-transform: scaleY(0.5);
    transform: scaleY(0.5);
}

.statistics-item {
    position: relative;
    float: left;
    padding: 20px 10px;
    width: 33.33333333%;
    box-sizing: border-box;
    text-align: center;
}

.statistics-item:before {
    content: " ";
    position: absolute;
    right: 0;
    top: 0;
    width: 1px;
    bottom: 0;
    border-right: 1px solid gainsboro;
    color: gainsboro;
    -webkit-transform-origin: 100% 0;
    transform-origin: 100% 0;
    -webkit-transform: scaleX(0.5);
    transform: scaleX(0.5);
}

.statistics-item:after {
    content: " ";
    position: absolute;
    left: 0;
    bottom: 0;
    right: 0;
    height: 1px;
    border-bottom: 1px solid gainsboro;
    color: gainsboro;
    -webkit-transform-origin: 0 100%;
    transform-origin: 0 100%;
    -webkit-transform: scaleY(0.5);
    transform: scaleY(0.5);
}

.statistics-item:active {
    background-color: ghostwhite;
}

.bg {
    display: flex;
    flex: 1;
    width: 100%;
    height: 300rpx;
    align-self: center;
}