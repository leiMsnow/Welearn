.tab {
  display: flex;
  width: 100%;
  background-color: forestgreen;
  flex-direction: row;
  justify-content: center;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  position: fixed;
  top: -1rpx;
}

.tab-item {
  padding: 10rpx 20rpx 10rpx 20rpx;
  font-size: 24rpx;
  text-align: center;
  align-items: center;
}

.selected-left {
  border: 1px solid white;
  color: forestgreen;
  background-color: white;
  border-radius: 10rpx 0rpx 0rpx 10rpx;
}

.unselect-left {
  border: 1px solid white;
  color: white;
  background-color: forestgreen;
  border-radius: 10rpx 0rpx 0rpx 10rpx;
}

.selected-right {
  border: 1px solid white;
  color: forestgreen;
  background-color: white;
  border-radius: 0rpx 10rpx 10rpx 0rpx;
}

.unselect-right {
  border: 1px solid white;
  color: white;
  background-color: forestgreen;
  border-radius: 0rpx 10rpx 10rpx 0rpx;
}

.scroll {
  margin-top: 50rpx;
}